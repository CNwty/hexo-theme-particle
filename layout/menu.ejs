<nav id="menu">
    <div class="desktop-menu">
        <a href="<%- config.root %>">
            <span class="logo"><img src="<%- config.root %>images/logo.png" alt="Logo" width="36" height="36"></span>
            <span class="title">念奴wty</span>
        </a>
        <% Object.keys(theme.menu).forEach(key => { %>
        <a href="<%=theme.menu[key].src%>">
            <span>
                <a-icon type="<%- theme.menu[key].icon.name %>" theme="<%- theme.menu[key].icon.theme %>" />
            </span>
            <span><%=key%></span>
        </a>
        <% }); %>
    </div>

    <div :class="'phone-menu ' + menu_show" id="phone-menu">
        <div class="menu-header">
            <a href="<%- config.root %>" class="logo-link">
                <span class="logo"><img src="<%- config.root %>images/logo.png" alt="Logo" width="36" height="36"></span>
            </a>
            <a href="<%- config.root %>" class="title" @click="menu_show=!menu_show"><%- config.title %></a>
                        <span class="menu-toggle" @click="menu_show=!menu_show">
                <img src="<%- config.root %>images/menu-toggle-icon.png" alt="Menu" width="24" height="24" style="vertical-align: middle;">
            </span>
        </div>
        <div class="items" v-show="menu_show">
            <% Object.keys(theme.menu).forEach(key => { %>
            <a href="<%=theme.menu[key].src%>">
                <div class="item">
                    <div style="min-width:20px; max-width:50px; width: 10%">
                        <a-icon type="<%- theme.menu[key].icon.name %>" theme="<%- theme.menu[key].icon.theme %>" />
                    </div>
                    <div style="min-width:100px;max-width: 150%;width: 20%;"><%=key%></div>
                </div>
            </a>
            <% }); %>
        </div>
        <div class="curtain" v-show="menu_show"></div>
    </div>

</nav>