.card-style {
  text-align: center;
  .avatar {
    img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      object-fit: cover;
    }
  }
  .name {
    margin-top: 15px;
    font-size: 18px;
    font-weight: bold;
  }
  .descriptions {
    margin: 15px 0;
    .description {
      margin: 5px 0;
      font-size: 14px;
      color: #666;
      min-height: 20px;
    }
  }
  .icon-links {
    margin: 15px 0;
    .icon-link {
      margin: 0 5px;
      a {
        color: #666;
        &:hover {
          color: #1890ff;
        }
      }
    }
  }
  .friend-links {
    margin-top: 15px;
    .friend-link {
      margin: 5px 0;
      a {
        color: #666;
        text-decoration: none;
        &:hover {
          color: #1890ff;
        }
      }
    }
  }
}

@media (max-width: 600px) {
  .card-style {
    .avatar {
      img {
        width: 80px;
        height: 80px;
      }
    }
    .name {
      font-size: 16px;
    }
    .descriptions {
      .description {
        font-size: 13px;
      }
    }
    .icon-links {
      .icon-link {
        margin: 0 3px;
        a {
          font-size: 14px;
        }
      }
    }
  }
}